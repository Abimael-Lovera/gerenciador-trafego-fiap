{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "title",
        "detail",
        "status"
    ],
    "properties": {
        "type": {
            "type": "string"
        },
        "title": {
            "type": "string",
            "description": "Título do erro"
        },
        "status": {
            "type": "integer",
            "description": "Código de status HTTP"
        },
        "detail": {
            "type": "string",
            "description": "Detalhes do erro"
        },
        "instance": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "path": {
            "type": "string",
            "description": "Caminho da requisição que causou o erro"
        }
    }
}